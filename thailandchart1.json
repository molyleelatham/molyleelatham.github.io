{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Thailand Provinces Map",
    "width": 600,
    "height": 800,
    "data": {
      "url": "https://raw.githubusercontent.com/apisit/thailand.json/refs/heads/master/thailand.json",
      "format": {
        "type": "json",
        "property": "features" 
      }
    },
    "projection": {
      "type": "mercator",
      "center": [101, 13],
      "scale": 2400
    },
    "mark": {
      "type": "geoshape",
      "stroke": "white",
      "strokeWidth": 1
    },
    "encoding": {
      "color": {
        "field": "properties.name",
        "type": "nominal",
        "scale": {
          "scheme": "blues"
        },
        "legend": null
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "Province"}
      ]
    },
    "config": {
      "view": {
        "stroke": null
      }
    }
  }