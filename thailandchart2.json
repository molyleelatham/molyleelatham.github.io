{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Thailand Population Distribution",
    "params": [
      {
        "name": "capitalFilter",
        "value": true,
        "bind": {
          "input": "checkbox",
          "name": "Show Capital Cities"
        }
      },
      {
        "name": "minPopulation",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 20000000,
          "step": 100000,
          "name": "Min Population:"
        }
      }
    ],
    "layer": [
      {
        // Base map layer
        "data": {
          "url": "https://raw.githubusercontent.com/apisit/thailand.json/refs/heads/master/thailand.json",
          "format": {
            "type": "json",
            "property": "features"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white",
          "strokeWidth": 1
        },
        "projection": {
          "type": "mercator",
          "center": [101, 13],
          "scale": 2400
        }
      },
      {
        // Population data layer
        "data": {
          "url": "https://raw.githubusercontent.com/molyleelatham/molyleelatham.github.io/refs/heads/main/th.csv"
        },
        "transform": [
          {
            "filter": "datum.population != null && datum.population != ''"
          },
          {
            "filter": "datum.population >= minPopulation"
          },
          {
            "filter": "!capitalFilter || datum.capital != null"
          }
        ],
        "encoding": {
          "longitude": {"field": "lng", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"},
          "size": {
            "field": "population",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "range": [100, 2000]
            },
            "title": "Population"
          },
          "color": {
            "field": "capital",
            "type": "nominal",
            "scale": {
              "domain": ["primary", "admin", "minor", null],
              "range": ["#d73027", "#fc8d59", "#91bfdb", "#4575b4"]
            },
            "title": "Capital Type"
          },
          "tooltip": [
            {"field": "city", "type": "nominal", "title": "City"},
            {"field": "admin_name", "type": "nominal", "title": "Province"},
            {"field": "population", "type": "quantitative", "title": "Population", "format": ","},
            {"field": "capital", "type": "nominal", "title": "Capital Type"},
            {"field": "population_proper", "type": "quantitative", "title": "City Proper Population", "format": ","}
          ]
        },
        "mark": {
          "type": "circle",
          "opacity": 0.8
        },
        "projection": {
          "type": "mercator",
          "center": [101, 13],
          "scale": 2400
        }
      }
    ],
    "config": {
      "view": {
        "stroke": null
      }
    }
  }